# ===========================================
# JWT Configuration
# ===========================================
# JWT Secret - ต้องเปลี่ยนใน production และต้องมีอย่างน้อย 32 ตัวอักษร
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production-12345678901234567890
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Server Configuration
# ===========================================
PORT=8000
NODE_ENV=development

# ===========================================
# Firebase Configuration
# ===========================================
# Firebase Project ID
FIREBASE_PROJECT_ID=your-project-id

# Firebase Service Account Private Key ID
FIREBASE_PRIVATE_KEY_ID=your-private-key-id

# Firebase Service Account Private Key (ต้องใส่ \n สำหรับ newlines)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"

# Firebase Service Account Client Email
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Firebase Service Account Client ID
FIREBASE_CLIENT_ID=your-client-id

# Firebase Auth URIs
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origins for CORS (คั่นด้วย comma)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Security Configuration
# ===========================================
# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=10

# Session duration in milliseconds (30 minutes = 1800000)
SESSION_DURATION=1800000

# ===========================================
# Rate Limiting Configuration
# ===========================================
# Rate limit window in milliseconds (30 seconds = 30000)
RATE_LIMIT_WINDOW_MS=30000

# Rate limit max requests per window (200 for development, 100 for production)
RATE_LIMIT_MAX_REQUESTS=200

# ===========================================
# Database Configuration
# ===========================================
# Firebase database URL (optional)
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/

# ===========================================
# Logging Configuration
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true
